{{ define "web/home/index" }}

    {{ template "web/layouts/head" .}}

    {{ template "web/layouts/navbar" .}}

    {{ template "web/layouts/header" .}}

    <!-- Begin Featured
        ================================================== -->
    <section class="featured-posts">
        <div class="section-title">
            <h2><span>Featured</span></h2>
        </div>
        <div class="card-columns listfeaturedtag">

            {{ range .featured }}
                <!-- begin post -->
                <div class="card">
                    <div class="row">
                        <div class="col-md-5 wrapthumbnail">
                            <a href="/articles/{{ .ID }}">
                                <div class="thumbnail" style="background-image:url(/assets/web/img/demopic/1.jpg);">
                                </div>
                            </a>
                        </div>
                        <div class="col-md-7">
                            <div class="card-block">
                                <h2 class="card-title"><a href="/articles/{{ .ID }}">{{ .Title }}</a></h2>
                                <h4 class="card-text">{{ .Content }}</h4>
                                <div class="metafooter">
                                    <div class="wrapfooter">
                                        <span class="meta-footer-thumb">
                                            <a href="author.html"><img class="author-thumb"
                                                                       src="https://ui-avatars.com/api/?name={{.User.Name}}"
                                                                       alt="Sal"></a>
                                        </span>
                                        <span class="author-meta">
                                            <span class="post-name"><a href="author.html">{{ .User.Name }}</a></span><br/>
                                            <span class="post-date">{{ .CreatedAt | formatAsDateTime }}</span><span class="dot"></span>
                                        </span>
                                        <span class="post-read-more"><a href="/articles/{{ .ID }}" title="Read Story"><svg
                                                        class="svgIcon-use" width="25" height="25" viewbox="0 0 25 25"><path
                                                            d="M19 6c0-1.1-.9-2-2-2H8c-1.1 0-2 .9-2 2v14.66h.012c.01.103.045.204.12.285a.5.5 0 0 0 .706.03L12.5 16.85l5.662 4.126a.508.508 0 0 0 .708-.03.5.5 0 0 0 .118-.285H19V6zm-6.838 9.97L7 19.636V6c0-.55.45-1 1-1h9c.55 0 1 .45 1 1v13.637l-5.162-3.668a.49.49 0 0 0-.676 0z"
                                                            fill-rule="evenodd"></path></svg></a></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end post -->
            {{ end }}

        </div>
    </section>
    <!-- End Featured
    ================================================== -->

    <!-- Begin List Posts
    ================================================== -->
    <section class="recent-posts">
        <div class="section-title">
            <h2><span>All Stories</span></h2>
        </div>
        <div class="card-columns listrecent">
            {{ range .stories }}
                <!-- begin post -->
                <div class="card">
                    <a href="/articles/{{ .ID }}">
                        <img class="img-fluid" src="/assets/web/img/demopic/10.jpg" alt="">
                    </a>
                    <div class="card-block">
                        <h2 class="card-title"><a href="/articles/{{ .ID }}">{{ .Title }}</a></h2>
                        <h4 class="card-text">{{ .Content }}</h4>
                        <div class="metafooter">
                            <div class="wrapfooter">
                    <span class="meta-footer-thumb">
                    <a href="author.html"><img class="author-thumb"
                                               src="https://ui-avatars.com/api/?name={{.User.Name}}"
                                               alt="Sal"></a>
                    </span>
                                <span class="author-meta">
                    <span class="post-name"><a href="author.html">{{ .User.Name }}</a></span><br/>
                    <span class="post-date">{{ .CreatedAt | formatAsDateTime }}</span><span class="dot"></span>
                    </span>
                                <span class="post-read-more"><a href="/articles/{{ .ID }}" title="Read Story"><svg class="svgIcon-use"
                                                                                                                   width="25"
                                                                                                                   height="25"
                                                                                                                   viewbox="0 0 25 25"><path
                                                    d="M19 6c0-1.1-.9-2-2-2H8c-1.1 0-2 .9-2 2v14.66h.012c.01.103.045.204.12.285a.5.5 0 0 0 .706.03L12.5 16.85l5.662 4.126a.508.508 0 0 0 .708-.03.5.5 0 0 0 .118-.285H19V6zm-6.838 9.97L7 19.636V6c0-.55.45-1 1-1h9c.55 0 1 .45 1 1v13.637l-5.162-3.668a.49.49 0 0 0-.676 0z"
                                                    fill-rule="evenodd"></path></svg></a></span>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end post -->
            {{ end }}
        </div>
    </section>
    <!-- End List Posts
    ================================================== -->


    {{ template "web/layouts/footer" .}}

    {{ template "web/layouts/foot" .}}

{{ end }}